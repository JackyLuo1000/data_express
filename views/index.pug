extends layout

block content
  table(class = 'gridtable')
    tr
      th Id
      th Username
      th Email
      th Age
      th User Level
      th
      th
    each item in people
      tr
        td
          a(href='/details/' + item.id) #{item.id}
        td #{item.username}
        td #{item.email}
        td #{item.age}
        td #{item.level}
        td
          a(href='/edit/' + item.id) Edit
        td
          a(href='/delete/' + item.id) Delete
          
    p
    #menu
        a(href='/create') Add New User
