extends layout
block content
  form(id='form', method='post', action='/edit/' + user.id)
    label(for='username') Username:
    input(type='text', name='username' value=user.username)
    br
    label(for='password') Password:
    input(type='password', name='password' value=user.password)
    br
    label(for='age') Age:
    input(type='text', name='age' value=user.age)
    br
    label(for='email') Email:
    input(type='text', name='email', value=user.email)
    br
    label(for='level') User Level:
    select(name='level')
      option(selected = user.level) 
      option(value='User') User
      option(value='Admin') Admin
    br

    label(for='question1') Who was the villain of 'The Lion King'?
    select(name='question1')
      option(selected = user.question1) #{user.question1}
    
      option(value='Mufasa') Mufasa
      option(value='Simba') Simba
      option(value='Scar') Scar
      option(value='Nala') Nala
    br

    label(for='question2') Who painted the Mona Lisa?
    select(name='question2')
      option(selected = user.question2) #{user.question2}
    
      option(value='Leonardo Da Vinci') Leonardo Da Vinci
      option(value='Van Gogh') Van Gogh
      option(value='Frida Kahlo') Frida Kahlo
      option(value='Claude Monet') Claude Monet
    br

    label(for='question3') What name did Mario, from 'Super Mario Brothers, originally have?
    select(name='question3')
      option(selected = user.question3) #{user.question3}
      option(value='Luigi') Luigi
      option(value='Wario') Wario
      option(value='Jumpman') Jumpman
      option(value='Hiro') Hiro
    br

    input(type='submit', value='Update User')
